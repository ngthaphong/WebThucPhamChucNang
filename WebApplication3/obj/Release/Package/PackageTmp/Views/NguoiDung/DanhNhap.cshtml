
@{
    ViewBag.Title = "DanhNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    input {
        width: 60%;
        padding: 3px 20px;
        margin: 3px 20%;
        box-sizing: border-box;
        border: none;
        border-bottom: 2px solid gray;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        
        font-size: 16px;
    }

        input:focus {
            font-size: 18px;
        }
</style>

<div id="id01" class="w3-modal" style="display:block;z-index:30;padding-top:15%">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:700px">
        <span class="w3-display-topleft" style="font-size: 50px;margin-left:10px">☼</span>
        <span class="w3-display-topmiddle" style="font-family:'Palatino Linotype'; font-size:30px">Login</span>

        <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-xlarge w3-transparent w3-display-topright" title="Close Modal">×</span>
        <br />
        <br />

        <div style="height:25px"></div>
        <h5 style="text-align:center ; color:#b22626">@ViewBag.Thongbao</h5>

        <table align="center" class="w3-container w3-section" style="width:100%">

            @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr>

                <td>

                    <input style="width:70%;padding-left:5%;font-family: 'Palatino Linotype';margin-left:27.5%" type="text" name="TenDN" placeholder="Username">
                </td>
                <td style="width:20%"><b style="color:#b22626;text-align:right"> @ViewData["Loi1"]</b></td>
            </tr>
            <tr>

                <td>

                    <input style="width:70%;padding-left:5%;font-family: 'Palatino Linotype';margin-left:27.5%" type="password" name="Matkhau" placeholder="Password">
                </td>
                <td style="width:20%"><b style="color:#b22626;text-align:right"> @ViewData["Loi2"]</b></td>
            </tr>
            <tr>
                <th><button class="w3-button w3-block w3-green w3-section w3-padding" type="submit" style="width:70%;margin-left:27.5%">Login</button></th>

               

            </tr>
            

    }
        </table>
         <a class="btn btn-facebook" style="margin: 4px 111px 50px 190px; padding: 5px 60px 5px 60px;"  href="/NguoiDung/LoginFacebook">
                    <i class="fa fa-facebook"></i>
                    Đăng nhập bằng Facebook
                </a>
        <a href="@Url.Action("DangKy", "NguoiDung")" class="w3-display-bottomleft" style="margin:3%">Registration</a>
    </div>
</div>
<h3 style="Text-align:Center" onfocus="">ĐỊA CHỈ</h3>
<p style="padding-top:20px; margin-bottom:20px; border-bottom: 2px solid black ;width:96%;margin-left:2% "></p>
<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d741.0877588692206!2d106.71495709782137!3d10.809613866934308!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x3830dea3e120ec8e!2sHUTECH+University+of+Technology!5e0!3m2!1sen!2s!4v1523033521319" width="100%" height="400px" frameborder="0" style=" box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.7);" allowfullscreen></iframe>


<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

