

@using WebApplication3.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SANPHAM>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    #lht1:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.7);
        margin: 3%;
    }
</style>
<div class="row">

    <h2 style="Text-align:Center">SẢN PHẨM MỚI</h2>
    <p style="padding-top:20px; margin-bottom:20px; border-bottom: 2px solid black ;width:96%;margin-left:2% "></p>



    @foreach (var sanpham in Model)
    {

        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail" id="lht1" style="margin-bottom:10px">
                <li>
                    <a href="@Url.Action("Details","LHTStore", new {meta = sanpham.Meta, id = sanpham.MaSP})">
                        <img alt="@sanpham.TenSanPham" src="~/images/@sanpham.Anhbia" width="200" />

                        <div>
                            <br />
                            <h4 style="text-align:center">
                                @sanpham.TenSanPham
                            </h4>
                            <p></p>
                        </div>
                        <div class="ratings">
                            <p class="pull-right">15 reviews</p>
                            <p>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                            </p>
                        </div>
                    </a>
                </li>
            </div>
        </div>
    }







</div>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount

<div class="MenuTrang">
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page = Page }))
</div>

<style>
    .MenuTrang li {
        display: inline;
    }
</style>


